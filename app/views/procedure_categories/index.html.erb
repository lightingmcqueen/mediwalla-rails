<p id="notice"><%= notice %></p>

<h1>Listing Procedure Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedure_categories.each do |procedure_category| %>
      <tr>
        <td><%= procedure_category.name %></td>
        <td><%= procedure_category.description %></td>
        <td><%= link_to 'Show', procedure_category %></td>
        <td><%= link_to 'Edit', edit_procedure_category_path(procedure_category) %></td>
        <td><%= link_to 'Destroy', procedure_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

