<p id="notice"><%= notice %></p>

<h1>Listing Clinics</h1>

<table>
  <thead>
    <tr>
      <th>Clinic admin</th>
      <th>Name</th>
      <th>Description</th>
      <th>Services</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>Country</th>
      <th>Zipcode string</th>
      <th>Coordinator</th>
      <th>Ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.clinic_admin_id %></td>
        <td><%= clinic.name %></td>
        <td><%= clinic.description %></td>
        <td><%= clinic.services %></td>
        <td><%= clinic.address_line_1 %></td>
        <td><%= clinic.address_line_2 %></td>
        <td><%= clinic.city %></td>
        <td><%= clinic.country_id %></td>
        <td><%= clinic.zipcode_string %></td>
        <td><%= clinic.coordinator %></td>
        <td><%= clinic.ratings %></td>
        <td><%= link_to 'Show', clinic %></td>
        <td><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
        <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

